{
  "extends": "next/core-web-vitals",
  "plugins": ["simple-import-sort"],
  "rules": {
    "simple-import-sort/imports": [
      "error",
      {
        "groups": [
          // External packages come first
          ["^@?\\w"],
          // Internal files
          ["^@/"],
          // Colocated files
          ["^\\.\\./", "^\\./"],
          // Style imports
          ["^.+\\.?(css)$"]
        ]
      }
    ]
  }
}
